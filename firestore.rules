rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access for hotels
    match /hotels/{hotelId} {
      allow read: if true;
      // TEMPORARY: Allow write for any user to make admin panel work
      allow write: if true; 
    }
    
    match /users/{userId} {
      // Allow any authenticated user to count all users for the admin dashboard.
      allow list: if request.auth != null;
      // Allow users to read/update their own profile.
      allow get, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;

      // Allow users to manage their own saved passengers
      match /passengers/{passengerId} {
        allow read, create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    match /bookings/{bookingId} {
        // Allow any authenticated user to count all bookings for the admin dashboard.
        allow list: if request.auth != null;
        allow create: if request.auth != null;
        // Allow a user to read their own booking details.
        allow get: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /tatkal_requests/{requestId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /chatbot_logs/{logId} {
        allow create: if request.auth != null;
    }
  }
}
