rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Lock down all access by default
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow users to read/write to their own document
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if request.auth != null;
    }

    // Allow users to manage their own saved passengers
    match /users/{userId}/passengers/{passengerId} {
      allow list, read, write, create, delete: if isOwner(userId);
    }

    // Allow users to create tatkal requests
    // and read only their own requests
    match /tatkal_requests/{requestId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if isOwner(resource.data.userId);
    }
  }
}
